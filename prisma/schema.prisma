// prisma/schema.prisma

// ðŸ”¹ ConfiguraÃ§Ã£o do banco
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ðŸ”¹ Prisma Client
generator client {
  provider = "prisma-client-js"
}

// ðŸ”¹ Model de Livro
model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  year        Int
  pages       Int
  currentPage Int
  status      String
  isbn        String?
  cover       String
  rating      Float
  synopsis    String
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamento Many-to-Many com Genre
  genres      Genre[]
}

// ðŸ”¹ Model de GÃªnero
model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique

  // Relacionamento Many-to-Many com Book
  books Book[]
}
