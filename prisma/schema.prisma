generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Enum de status de leitura
enum ReadingStatus {
  QUERO_LER
  LENDO
  LIDO
}

// Tabela de gÃªneros
model Genre {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  books Book[]  @relation("BookGenres")
}

// Tabela de livros
model Book {
  id          Int           @id @default(autoincrement())
  title       String
  author      String
  year        Int
  pages       Int
  currentPage Int
  status      ReadingStatus
  isbn        String?       
  cover       String?       
  rating      Float?        
  synopsis    String?       
  notes       String?       

  genres Genre[] @relation("BookGenres")
}
